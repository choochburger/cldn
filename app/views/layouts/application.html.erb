<!DOCTYPE html>
<html>
<head>
  <title>chrislyons.net</title>
  <%= stylesheet_link_tag "jplayer/jplayer.blue.monday.css",
                          "styles.css",
                          "shadowbox-3.0.3/shadowbox.css" 
                          %>
  <%= javascript_include_tag "jquery-1.5.2.min.js",
                             "jplayer/jquery.jplayer.min.js",
                             "shadowbox-3.0.3/shadowbox.js", 
                             "application.js" %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="player"></div>
  
  <div class="player-wrapper">
    <div class="jp-audio">
      <div class="jp-type-single">
        <div id="jp_interface_1" class="jp-interface">
          <ul class="jp-controls">
            <li><a href="#" class="jp-play" tabindex="1">play</a></li>
            <li><a href="#" class="jp-pause" tabindex="1">pause</a></li>
            <li><a href="#" class="jp-stop" tabindex="1">stop</a></li>
            <li><a href="#" class="jp-mute" tabindex="1">mute</a></li>
            <li><a href="#" class="jp-unmute" tabindex="1">unmute</a></li>
          </ul>
          <div class="jp-progress">
            <div class="jp-seek-bar">
              <div class="jp-play-bar"></div>
            </div>
          </div>
          <div class="jp-volume-bar">
            <div class="jp-volume-bar-value"></div>
          </div>
          <div class="jp-current-time"></div>
          <div class="jp-duration"></div>
        </div>
      </div>
    </div>
  </div>

 <div class="header">
  <ul class="collapsedList">
    <li>Web</li>
    <li>Music</li>
    <li>Contact: chris [at] chrislyons.net</li>
    <li>Twitter: <%= link_to "@choochburger", "http://www.twitter.com/choochburger", {:target => "_blank"} %></li>
  </ul>
 </div>

  <%= yield %>
  
  <div id="footer"></div>
</body>
</html>
