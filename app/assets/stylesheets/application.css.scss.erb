*= require_tree .
*/

@import "compass/css3/";

$textColor: #ddd;
$borderRadius: 8px;

@font-face {
  font-family: 'Rokkitt';
  src: url(<%= asset_path "Rokkitt-webfont.eot" %>);
  src: url(<%= asset_path "Rokkitt-webfont.eot?#iefix" %>) format('embedded-opentype'),
       url(<%= asset_path "Rokkitt-webfont.woff" %>) format('woff'),
       url(<%= asset_path "Rokkitt-webfont.ttf" %>) format('truetype'),
       url(<%= asset_path "Rokkitt-webfont.svg#Rokkitt" %>) format('svg');
  font-style: normal;
}

body {
  background-color: #000000;
  background-image: url(<%= asset_data_uri "texture.png" %>);
  color: $textColor;
  font-family: "Rokkitt", Helvetica, sans-serif;
  font-size: 20px;
  margin: 0;
  padding: 0;
  @include text-shadow(rgba(111, 111, 111, 0.4) 2px 1px 1px);
}

a {
  color: orange;
}

p {
  margin: 2px 0 14px;
}

strong {
  font-weight: bold;
}

#main {
  margin: 0 40px;
}

#content {
  $tileHeight: 196px;
  $tileWidth: 250px;

  .tile {
    background-repeat: no-repeat;
    background-position: 50% 50%;
    @include box-shadow(rgba(black, 0.5) 2px 2px 2px inset);
    @include border-radius($borderRadius);
    cursor: pointer;
    float: left;
    height: $tileHeight;
    margin: 0 36px 36px 0;
    @include opacity(0.95);
    @include text-shadow(rgba(0, 0, 0, 0.1) 2px 1px 1px);
    width: $tileWidth;
  }
  
  .tile:hover {
    @include box-shadow(rgba(black, 0.5) 2px 2px 2px);
    left: -1px;
    @include opacity(1.0);
    position: relative;
    top: -1px;
  }

  .tile .description {
    background: rgba(255, 255, 255, 0.8);
    @include border-radius($borderRadius);
    color: #333;
    display: table-cell;
    height: $tileHeight;
    @include opacity(0);
    padding: 2px 4px;
    text-align: center;
    width: $tileWidth;
    vertical-align: middle;
  }

  .tile:hover .description {
    @include opacity(1.0);
  }
}

ul li {
  list-style: disc;
  list-style-position: inside;
}

ul.horizontal {
  padding-left: 0;

  li {
    display: inline;
    list-style: none;
  }

  li.divider {
    border-right: 2px dotted rgba(100, 100, 100, 0.4);
    padding-right: 30px;
  }
}

#header {
  h1 {
    color: #eee;
    display: inline-block;
    font-size: 44px;
    @include text-shadow(rgba(111, 111, 111, 0.8) 2px 1px 1px);
  }

  .logo {
    display: inline-block;
  }

  margin: 4px 0;
}

#nav {
  background: rgba(100,100,100,0.1);
  @include border-radius($borderRadius);
  margin-bottom: 18px;
  padding: 6px;
  @include text-shadow(rgba(111, 111, 111, 0.8) 2px 1px 1px);

  ul li {
    display: inline-block;
    margin-right: 20px;
    white-space: nowrap;
  }

  a {
    color: #A9E4FF;
    cursor: pointer;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  a.selected {
    color: darkkhaki;
  }
}

.about {
  ul {
    font-size: 18px;
  }

  ul li {
    margin: 8px 0;
    padding-left: 20px;
  }

  .blurb {
    background: rgba(50, 50, 50, 0.1);
    @include border-radius($borderRadius);
    margin: 0 0 12px;
    padding: 8px;

    p {
      margin: 0;
    }
  }

  .me {
    background-image: url(<%= asset_data_uri "me.png" %>);
    background-size: 100%;
    float: left;
    @include border-radius($borderRadius);
    @include box-shadow(rgba(black, 0.5) 2px 2px 2px inset);
    height: 140px;
    margin: 0 12px 0 0;
    width: 108px;
  }

  .description {
    padding-top: 42px;
  }
}

.contact {
  font-size: 48px;
  margin: 24px 0;
  text-align: center;
}

/* clearfix */
/* For modern browsers */
.cf:before,
.cf:after {
    content:"";
    display:table;
}

.cf:after {
    clear:both;
}

/* For IE 6/7 (trigger hasLayout) */
.cf {
    *zoom:1;
}


/* bottom arrow */

$arrowColor: rgba(100, 100, 100, 0.5);

.selected {
	position: relative;
}

.selected:after, .selected:before {
	top: 100%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

.selected:after {
	border-top-color: $arrowColor;
	border-width: 10px;
	left: 50%;
	margin-left: -10px;
}

.selected:before {
	border-top-color: $arrowColor;
	border-width: 16px;
	left: 50%;
	margin-left: -16px;
}

/* jplayer */
#jp_container_1 {
  bottom: 0;
  position: fixed;
  right: 0;
  width: 100%;
  z-index: 100;
}

#song_title {
  color: #efefef;
  font-size: 16px;
  left: 430px;
  position: absolute;
  top: 22px;
}

#jplayer_spacer {
  display: block;
  height: 100px;
}
