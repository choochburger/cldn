*/

@import "compass/css3/";

$textColor: #ddd;
$borderRadius: 8px;

body {
  background-color: #000000;
  background-image: url(<%= asset_data_uri "texture.png" %>);
  color: $textColor;
  font-family: georgia, serif;
  font-size: 18px;
  margin: 0;
  padding: 0;
  text-shadow: 2px 1px 1px rgba(111, 111, 111, 0.8);
}

h1 {
  font-size: 36px;
}

a {
  color: orange;
}

#main {
  margin: 0 40px;
}

ul li {
  list-style: none;
}

ul.horizontal {
  padding-left: 0;

  li {
    display: inline;
  }
}

#header {
  .logo {
    display: inline-block;
  }

  .contact {
    font-size: 16px;
    float: right;
  }

  margin: 4px 0 12px;
}

#nav {
  background: rgba(100,100,100,0.1);
  @include border-radius($borderRadius);
  padding: 6px;

  ul li {
    margin-right: 20px;
  }

  a {
    color: $textColor;
    text-decoration: none;
  }

  a.selected {
    color: darkkhaki;
  }
}

/* clearfix */
/* For modern browsers */
.cf:before,
.cf:after {
    content:"";
    display:table;
}

.cf:after {
    clear:both;
}

/* For IE 6/7 (trigger hasLayout) */
.cf {
    *zoom:1;
}


/* bottom arrow */

$arrowColor: rgba(100, 100, 100, 0.5);

.selected {
	position: relative;
	background: $arrowColor;
	border: 3px solid $arrowColor;
  @include border-radius($borderRadius);
  padding: 0 4px;
}

.selected:after, .selected:before {
	top: 100%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

.selected:after {
	border-top-color: $arrowColor;
	border-width: 10px;
	left: 50%;
	margin-left: -10px;
}

.selected:before {
	border-top-color: $arrowColor;
	border-width: 16px;
	left: 50%;
	margin-left: -16px;
}
